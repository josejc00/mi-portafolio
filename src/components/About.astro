<style>
  .section-pad { padding: 100px 5vw; }
  .container { max-width: 1200px; margin: 0 auto; }

  .section-label {
    color: #00c8ff; font-size: 12px; letter-spacing: 0.3em;
    text-transform: uppercase; margin-bottom: 12px;
    font-family: 'DM Sans', sans-serif;
    display: flex; align-items: center; gap: 10px;
  }
  .section-label::before {
    content: ''; display: inline-block; width: 24px; height: 1px;
    background: #00c8ff;
  }
  .section-title {
    font-size: clamp(32px, 5vw, 56px); font-weight: 800;
    color: white; margin-bottom: 60px; line-height: 1;
    letter-spacing: -0.02em;
  }
  .accent {
    background: linear-gradient(135deg, #00c8ff, #0066ff);
    -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* About grid */
  .about-grid {
    display: grid; grid-template-columns: 320px 1fr; gap: 60px; align-items: start;
  }
  .about-left { display: flex; flex-direction: column; align-items: center; gap: 24px; }
  .about-photo {
    position: relative; width: 200px; height: 200px;
    border-radius: 50%; display: flex; align-items: center; justify-content: center;
  }
  .about-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
    border-radius: 50%;
    display: block;
  }
  .about-ring {
    position: absolute; inset: -8px; border-radius: 50%;
    border: 1px dashed rgba(0,200,255,0.2);
    animation: spin 20s linear infinite;
  }
  @keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }

  .about-name-card {
    background: rgba(11,22,40,0.8);
    border: 1px solid rgba(0,200,255,0.12);
    border-radius: 16px; padding: 20px 24px;
    text-align: center; width: 100%;
    backdrop-filter: blur(10px);
  }
  .about-name { font-family: 'Syne', sans-serif; font-weight: 700; font-size: 18px; color: white; margin-bottom: 4px; }
  .about-role { color: #00c8ff; font-size: 13px; font-family: 'DM Sans', sans-serif; margin-bottom: 16px; }
  .about-stats-mini { display: flex; align-items: center; justify-content: center; gap: 16px; }
  .stat-item { display: flex; flex-direction: column; align-items: center; gap: 2px; }
  .stat-val { font-family: 'Syne', sans-serif; font-weight: 700; font-size: 20px; color: #00c8ff; }
  .stat-lbl { font-size: 11px; color: rgba(232,240,254,0.35); font-family: 'DM Sans', sans-serif; }
  .stat-divider { width: 1px; height: 28px; background: rgba(0,200,255,0.15); }

  .about-right { display: flex; flex-direction: column; gap: 16px; }
  .about-text { color: rgba(232,240,254,0.55); font-size: 15px; line-height: 1.85; font-weight: 300; }
  .about-tags { display: flex; flex-wrap: wrap; gap: 8px; margin-top: 8px; }
  .tag {
    padding: 6px 14px; background: rgba(0,200,255,0.08);
    border: 1px solid rgba(0,200,255,0.18); border-radius: 6px;
    font-size: 12px; color: #00c8ff; font-family: monospace; letter-spacing: 0.05em;
  }
  .btn-primary-sm {
    display: inline-flex; align-items: center; gap: 8px;
    margin-top: 8px; padding: 12px 28px;
    background: linear-gradient(135deg, #00c8ff, #0066ff);
    color: white; font-family: 'Syne', sans-serif; font-weight: 700;
    font-size: 14px; border-radius: 8px; align-self: flex-start;
    transition: all 0.3s; box-shadow: 0 4px 20px rgba(0,200,255,0.25);
  }
  .btn-primary-sm:hover { transform: translateY(-2px); box-shadow: 0 8px 28px rgba(0,200,255,0.4); }

  /* Journey */
  .journey-grid {
    display: grid; grid-template-columns: 1fr 1fr; gap: 40px;
  }
  .journey-col {
    background: rgba(11,22,40,0.6);
    border: 1px solid rgba(0,200,255,0.1);
    border-radius: 20px; padding: 32px;
  }
  .journey-col-header {
    display: flex; align-items: center; gap: 12px;
    font-family: 'Syne', sans-serif; font-weight: 700; font-size: 18px;
    color: white; margin-bottom: 32px;
    padding-bottom: 16px;
    border-bottom: 1px solid rgba(0,200,255,0.1);
  }
  .journey-icon {
    width: 36px; height: 36px; border-radius: 8px;
    background: rgba(0,200,255,0.12); border: 1px solid rgba(0,200,255,0.2);
    display: flex; align-items: center; justify-content: center;
    color: #00c8ff;
  }
  .timeline { display: flex; flex-direction: column; gap: 0; }
  .tl-item {
    display: flex; gap: 16px; padding-bottom: 28px;
    position: relative;
  }
  .tl-item:not(:last-child)::before {
    content: ''; position: absolute;
    left: 7px; top: 16px; bottom: 0;
    width: 1px; background: rgba(0,200,255,0.12);
  }
  .tl-dot {
    width: 15px; height: 15px; border-radius: 50%; flex-shrink: 0; margin-top: 2px;
    background: rgba(0,102,255,0.4); border: 2px solid rgba(0,102,255,0.6);
  }
  .tl-dot-cyan {
    background: rgba(0,200,255,0.3); border-color: #00c8ff;
    box-shadow: 0 0 8px rgba(0,200,255,0.4);
  }
  .tl-content { flex: 1; }
  .tl-date { font-size: 11px; color: #00c8ff; letter-spacing: 0.1em; font-family: 'DM Sans', sans-serif; margin-bottom: 4px; }
  .tl-title { font-family: 'Syne', sans-serif; font-weight: 700; font-size: 15px; color: white; margin-bottom: 3px; }
  .tl-place { font-size: 13px; color: rgba(232,240,254,0.4); margin-bottom: 8px; font-family: 'DM Sans', sans-serif; }
  .tl-desc { font-size: 13px; color: rgba(232,240,254,0.4); line-height: 1.6; font-weight: 300; font-family: 'DM Sans', sans-serif; }

  @media (max-width: 900px) {
    .about-grid { grid-template-columns: 1fr; }
    .about-left { flex-direction: row; flex-wrap: wrap; }
    .journey-grid { grid-template-columns: 1fr; }
  }
</style>