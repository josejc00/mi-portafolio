<style>
  /* ---- NAV ---- */
  #navbar {
    position: fixed; top: 0; left: 0; right: 0; z-index: 100;
    background: rgba(6,13,26,0.85);
    backdrop-filter: blur(16px);
    border-bottom: 1px solid rgba(0,200,255,0.08);
  }
  .nav-inner {
    max-width: 1200px; margin: 0 auto;
    display: flex; align-items: center; justify-content: space-between;
    padding: 18px 5vw;
  }
  .nav-logo {
    font-family: 'Syne', sans-serif; font-size: 22px; font-weight: 800;
    color: white; letter-spacing: -0.02em;
  }
  .nav-logo span { color: #00c8ff; }
  .nav-links { display: flex; gap: 36px; list-style: none; }
  .nav-links a {
    font-size: 14px; color: rgba(232,240,254,0.5);
    font-family: 'DM Sans', sans-serif; font-weight: 400;
    letter-spacing: 0.03em; transition: color 0.3s;
    position: relative; padding-bottom: 2px;
  }
  .nav-links a::after {
    content: ''; position: absolute; bottom: -2px; left: 0; right: 0;
    height: 1px; background: #00c8ff; transform: scaleX(0);
    transition: transform 0.3s ease; transform-origin: left;
  }
  .nav-links a:hover, .nav-links a.active { color: #00c8ff; }
  .nav-links a:hover::after, .nav-links a.active::after { transform: scaleX(1); }
  .nav-mobile-btn { display: none; flex-direction: column; gap: 5px; background: none; border: none; cursor: pointer; }
  .nav-mobile-btn span { display: block; width: 24px; height: 2px; background: white; border-radius: 2px; }

  /* ---- HERO ---- */
  .hero-section {
    min-height: 100vh; display: flex; flex-direction: column;
    justify-content: center; padding: 120px 5vw 80px;
    position: relative; overflow: hidden;
  }

  /* Backgrounds */
  .bg-layer { position: absolute; inset: 0; pointer-events: none; }
  .orb {
    position: absolute; border-radius: 50%;
    filter: blur(80px);
  }
  .orb-left {
    width: 500px; height: 500px;
    background: radial-gradient(circle, rgba(0,102,255,0.2) 0%, transparent 70%);
    top: -100px; left: -100px;
    animation: float 8s ease-in-out infinite;
  }
  .orb-right {
    width: 600px; height: 600px;
    background: radial-gradient(circle, rgba(0,200,255,0.12) 0%, transparent 70%);
    bottom: -150px; right: -100px;
    animation: float 10s ease-in-out infinite reverse;
  }
  .grid-lines {
    position: absolute; inset: 0;
    background-image:
      linear-gradient(rgba(0,200,255,0.04) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,200,255,0.04) 1px, transparent 1px);
    background-size: 50px 50px;
  }
  .scanline {
    position: absolute; left: 0; right: 0; height: 2px;
    background: linear-gradient(90deg, transparent, rgba(0,200,255,0.15), transparent);
    animation: scanline 8s linear infinite;
  }

  /* Hero layout */
  .hero-content {
    max-width: 1200px; margin: 0 auto; width: 100%;
    display: flex; align-items: center; gap: 60px;
    position: relative; z-index: 2;
  }
  .hero-text { flex: 1; }

  .hero-greeting {
    display: flex; align-items: center; gap: 10px;
    color: rgba(232,240,254,0.5); font-size: 13px;
    font-family: 'DM Sans', sans-serif; letter-spacing: 0.2em;
    text-transform: uppercase; margin-bottom: 20px;
  }
  .dot-blink {
    width: 8px; height: 8px; border-radius: 50%; background: #00c8ff;
    display: inline-block;
    animation: blink 1.8s ease-in-out infinite;
    box-shadow: 0 0 8px #00c8ff;
  }

  .hero-title {
    font-size: clamp(44px, 7vw, 88px);
    font-weight: 800; line-height: 1.0; letter-spacing: -0.03em;
    color: white; margin-bottom: 20px;
  }
  .name-accent {
    background: linear-gradient(135deg, #00c8ff, #0066ff);
    -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .role-badge {
    display: inline-flex; align-items: center; gap: 8px;
    margin-bottom: 24px;
  }
  .role-text {
    font-family: 'Syne', sans-serif; font-size: 18px; font-weight: 600;
    color: #00c8ff;
    position: relative;
  }
  .role-text::before {
    content: ''; position: absolute; bottom: -3px; left: 0; right: 0;
    height: 2px;
    background: linear-gradient(90deg, #00c8ff, transparent);
  }

  .hero-desc {
    color: rgba(232,240,254,0.5); font-size: 16px; line-height: 1.8;
    font-weight: 300; max-width: 480px; margin-bottom: 36px;
  }

  .hero-btns { display: flex; gap: 14px; flex-wrap: wrap; margin-bottom: 40px; }
  .btn-primary {
    padding: 13px 30px;
    background: linear-gradient(135deg, #00c8ff, #0066ff);
    color: white; font-family: 'Syne', sans-serif;
    font-weight: 700; font-size: 14px; border-radius: 8px;
    transition: all 0.3s ease; display: inline-block;
    box-shadow: 0 4px 20px rgba(0,200,255,0.3);
  }
  .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 8px 28px rgba(0,200,255,0.45); }
  .btn-outline {
    padding: 13px 30px;
    border: 1px solid rgba(0,200,255,0.35);
    color: #00c8ff; font-family: 'DM Sans', sans-serif;
    font-size: 14px; border-radius: 8px;
    transition: all 0.3s ease; display: inline-block;
  }
  .btn-outline:hover { background: rgba(0,200,255,0.08); border-color: #00c8ff; }

  .social-row { display: flex; gap: 12px; }
  .social-link {
    width: 40px; height: 40px; border-radius: 8px;
    border: 1px solid rgba(0,200,255,0.15);
    display: flex; align-items: center; justify-content: center;
    color: rgba(232,240,254,0.4);
    transition: all 0.3s ease;
  }
  .social-link:hover {
    color: #00c8ff; border-color: rgba(0,200,255,0.5);
    background: rgba(0,200,255,0.08);
    transform: translateY(-2px);
  }

  /* Foto */
  .hero-photo-wrap {
    position: relative; flex-shrink: 0;
    width: 340px; height: 400px;
    display: flex; align-items: center; justify-content: center;
  }
  .photo-ring {
    position: absolute; inset: -20px;
    border-radius: 50% 38% 62% 40% / 43% 57% 43% 57%;
    border: 1px solid rgba(0,200,255,0.2);
    animation: float 6s ease-in-out infinite;
  }
  .photo-glow {
    position: absolute; inset: 20px; border-radius: inherit;
    background: radial-gradient(circle, rgba(0,200,255,0.15) 0%, transparent 70%);
  }
  .photo-container {
    width: 280px; height: 340px;
    border-radius: 24px;
    background: linear-gradient(160deg, rgba(0,200,255,0.1) 0%, rgba(0,102,255,0.05) 100%);
    border: 1px solid rgba(0,200,255,0.2);
    overflow: hidden;
    display: flex; align-items: center; justify-content: center;
    position: relative; z-index: 1;
  }
  .photo-container img {
    width: 100%; height: 100%; object-fit: cover;
  }
  .photo-placeholder {
    display: flex; flex-direction: column; align-items: center; justify-content: center;
    gap: 8px; width: 100%; height: 100%;
  }

  .float-badge {
    position: absolute; z-index: 2;
    background: rgba(11,22,40,0.9);
    border: 1px solid rgba(0,200,255,0.2);
    border-radius: 12px; padding: 12px 18px;
    display: flex; flex-direction: column; align-items: center;
    gap: 2px;
    backdrop-filter: blur(10px);
    font-family: 'Syne', sans-serif; font-weight: 700;
    animation: float 5s ease-in-out infinite;
  }
  .badge-top { top: 20px; left: -20px; }
  .badge-bottom { bottom: 30px; right: -20px; animation-delay: 2s; }

  /* Scroll */
  .scroll-hint {
    position: absolute; bottom: 32px; left: 50%; transform: translateX(-50%);
    display: flex; flex-direction: column; align-items: center; gap: 8px;
    color: rgba(232,240,254,0.25); font-size: 11px; letter-spacing: 0.2em;
    font-family: 'DM Sans', sans-serif;
    animation: fadeIn 1s ease 1.5s both;
  }
  .scroll-mouse {
    width: 22px; height: 36px; border: 1px solid rgba(0,200,255,0.3);
    border-radius: 11px; display: flex; justify-content: center; padding-top: 6px;
  }
  .scroll-wheel {
    width: 3px; height: 8px; background: #00c8ff; border-radius: 2px;
    animation: scrollWheel 2s ease-in-out infinite;
  }
  @keyframes scrollWheel {
    0% { transform: translateY(0); opacity: 1; }
    100% { transform: translateY(10px); opacity: 0; }
  }

  /* Responsive */
  @media (max-width: 900px) {
    .hero-content { flex-direction: column-reverse; gap: 40px; text-align: center; }
    .hero-photo-wrap { width: 260px; height: 300px; }
    .photo-container { width: 220px; height: 270px; }
    .hero-btns { justify-content: center; }
    .social-row { justify-content: center; }
    .hero-desc { margin: 0 auto 36px; }
    .nav-links { display: none; }
    .nav-mobile-btn { display: flex; }
  }
</style>

<script >
  // Nav scroll effect
  const navbar = document.getElementById('navbar');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar.style.background = 'rgba(6,13,26,0.97)';
    } else {
      navbar.style.background = 'rgba(6,13,26,0.85)';
    }
  });

  // Active nav link on scroll
  const sections = document.querySelectorAll('section[id]');
  const navLinks = document.querySelectorAll('.nav-links a');
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        navLinks.forEach(link => link.classList.remove('active'));
        const active = document.querySelector('.nav-links a[href="#' + entry.target.id + '"]');
        if (active) active.classList.add('active');
      }
    });
  }, { threshold: 0.4 });
  sections.forEach(s => observer.observe(s));
</script>